<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <meta name="facebook-domain-verification" content="vpej8vfmmokgct86hjk4e9vf8dl2by" />
    <meta name="facebook-domain-verification" content="vokk21zid9hwmeyrg2b10xm2aj3tso" />
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    {{ content_for_header }}

    {%- liquid
      assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
      assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    %}

    {% style %}
      {{ settings.type_body_font | font_face: font_display: 'swap' }}
      {{ body_font_bold | font_face: font_display: 'swap' }}
      {{ body_font_italic | font_face: font_display: 'swap' }}
      {{ body_font_bold_italic | font_face: font_display: 'swap' }}
      {{ settings.type_header_font | font_face: font_display: 'swap' }}

      :root {
        --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
        --font-body-style: {{ settings.type_body_font.style }};
        --font-body-weight: {{ settings.type_body_font.weight }};

        --font-heading-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
        --font-heading-style: {{ settings.type_header_font.style }};
        --font-heading-weight: {{ settings.type_header_font.weight }};

        --font-body-scale: {{ settings.body_scale | divided_by: 100.0 }};
        --font-heading-scale: {{ settings.heading_scale | times: 1.0 | divided_by: settings.body_scale }};

        --color-base-text: {{ settings.colors_text.red }}, {{ settings.colors_text.green }}, {{ settings.colors_text.blue }};
        --color-base-background-1: {{ settings.colors_background_1.red }}, {{ settings.colors_background_1.green }}, {{ settings.colors_background_1.blue }};
        --color-base-background-2: {{ settings.colors_background_2.red }}, {{ settings.colors_background_2.green }}, {{ settings.colors_background_2.blue }};
        --color-base-solid-button-labels: {{ settings.colors_solid_button_labels.red }}, {{ settings.colors_solid_button_labels.green }}, {{ settings.colors_solid_button_labels.blue }};
        --color-base-outline-button-labels: {{ settings.colors_outline_button_labels.red }}, {{ settings.colors_outline_button_labels.green }}, {{ settings.colors_outline_button_labels.blue }};
        --color-base-accent-1: {{ settings.colors_accent_1.red }}, {{ settings.colors_accent_1.green }}, {{ settings.colors_accent_1.blue }};
        --color-base-accent-2: {{ settings.colors_accent_2.red }}, {{ settings.colors_accent_2.green }}, {{ settings.colors_accent_2.blue }};
        --payment-terms-background-color: {{ settings.colors_background_1 }};

        --gradient-base-background-1: {% if settings.gradient_background_1 != blank %}{{ settings.gradient_background_1 }}{% else %}{{ settings.colors_background_1 }}{% endif %};
        --gradient-base-background-2: {% if settings.gradient_background_2 != blank %}{{ settings.gradient_background_2 }}{% else %}{{ settings.colors_background_2 }}{% endif %};
        --gradient-base-accent-1: {% if settings.gradient_accent_1 != blank %}{{ settings.gradient_accent_1 }}{% else %}{{ settings.colors_accent_1 }}{% endif %};
        --gradient-base-accent-2: {% if settings.gradient_accent_2 != blank %}{{ settings.gradient_accent_2 }}{% else %}{{ settings.colors_accent_2 }}{% endif %};

        --page-width: {{ settings.page_width | divided_by: 10 }}rem;
        --page-width-margin: {% if settings.page_width == '1600' %}2{% else %}0{% endif %}rem;
      }

      *,
      *::before,
      *::after {
        box-sizing: inherit;
      }

      html {
        box-sizing: border-box;
        font-size: calc(var(--font-body-scale) * 62.5%);
        height: 100%;
      }

      body {
        display: grid;
        grid-template-rows: auto auto 1fr auto;
        grid-template-columns: 100%;
        min-height: 100%;
        margin: 0;
        font-size: 1.5rem;
        letter-spacing: 0.06rem;
        line-height: calc(1 + 0.8 / var(--font-body-scale));
        font-family: var(--font-body-family);
        font-style: var(--font-body-style);
        font-weight: var(--font-body-weight);
      }

      @media screen and (min-width: 750px) {
        body {
          font-size: 1.6rem;
        }
      }
    {% endstyle %}

    {{ 'base.css' | asset_url | stylesheet_tag }}
    {{ 'custom.css' | asset_url | stylesheet_tag }}

    {%- unless settings.type_body_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.type_body_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}
    {%- unless settings.type_header_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.type_header_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}

    {%- if settings.predictive_search_enabled -%}
      <link rel="stylesheet" href="{{ 'component-predictive-search.css' | asset_url }}" media="print" onload="this.media='all'">
    {%- endif -%}

    {%- if request.page_type  == 'index' -%}
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css" integrity="sha512-wR4oNhLBHf7smjy0K4oqzdWumd+r5/+6QO/vDda76MW5iug4PT7v86FoEkySIJft3XA0Ae6axhIvHrqwm793Nw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css" integrity="sha512-6lLUdeQ5uheMFbWm3CP271l14RsX1xtx+J5x2yeIDkkiBpeVTNhTqijME7GgRKKi6hCqovwCoBTlRBEC20M8Mg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
      <style>
        /* Custom Carousel CSS */
        @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap');
        @import url('http://fonts.cdnfonts.com/css/din-pro-cond');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            /* outline: 1px blue solid; */
        }

        /* BEGIN GLOBAL SETTINGS */
        .banner {
            display: block;
            width: 100%;
        }

        .banner .banner-image {
            width: 100%;
            display: block;
        }

        .banner .banner-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 5rem 0 3rem;
            position: relative;
        }

        .banner .banner-content .banner-tagline-container,
        .banner .banner-content .banner-shop-now-button-container {
            position: relative;
        }

        .banner .banner-content .banner-tagline-container {
            margin-bottom: 3rem;
        }

        .banner .banner-content .banner-tagline-container .banner-message {
            font-family: "Quicksand";
            font-weight: 700;
            color: #fff;
            font-size: 2.75rem;
            text-align: center;
            margin: 0;
        }

        .banner .banner-content .banner-shop-now-button-container a.shop-now-button {
            display: block;
            font-family: "DIN Pro Cond Black", serif;
            color: #fff;
            background-color: #f09000;
            border-radius: 8px;
            border: 0;
            margin: 0 auto;
            font-size: 1.75rem;
            letter-spacing: 1px;
            font-weight: bold;
            padding: .5rem 2rem;
            text-decoration: none;
        }

        .decorative-icon {
            position: absolute;
        }

        .banner .banner-image.mobile {
            display: block;
        }

        .banner .banner-image.desktop {
            display: none;
        }

        /* TABLET */
        @media only screen and (min-width: 768px){
            .banner .banner-image.mobile {
                display: none;
            }

            .banner .banner-image.desktop {
                display: block;
            }

            .banner {
                display: flex;
                max-width: 1920px;
                margin: 0 auto;
            }

            .banner.summer-stem-activities,
            .halloween {
                flex-direction: row-reverse;
            }

            .banner .banner-image {
                width: 66.9999%;
                height: auto;
            }

            .banner .banner-content {
                width: 34.9999%;
                padding: 2.5rem 0 0rem;
            }

            .banner .banner-content .banner-tagline-container {
                margin-bottom: 1.5rem;
            }

            .banner .banner-content .banner-tagline-container .banner-message {
                font-size: 3.5vw;
            }

            .banner .banner-content .banner-shop-now-button-container {
                max-width: 60%;
            }

            .banner .banner-content .banner-shop-now-button-container a.shop-now-button {
                font-size: 1.25rem;
            }
        }

        @media only screen and (min-width: 1000px){
            .banner .banner-content .banner-tagline-container .banner-message {
                font-size: 3.5vw;
            }

            .banner .banner-content .banner-shop-now-button-container a.shop-now-button {
                font-size: 2vw;
            }
        }

        @media only screen and (min-width: 1920px){
            .banner .banner-content .banner-tagline-container .banner-message {
                font-size: 4.25rem;
            }

            .banner .banner-content .banner-shop-now-button-container a.shop-now-button {
                font-size: 2.5rem;
                padding: .5rem 4rem;
            }
        }

        /* BEGIN HALLOWEE BANNER STYLES */
        .banner.halloween {
            background-color: #522d9d;
        }

        .banner.halloween .banner-content .spider-web {
            max-width: 8rem;
            width: 100%;
            height: 9rem;
            top: 0;
            left: 0;
            position: absolute;
        }

        .banner.halloween .banner-content .banner-shop-now-button-container .shop-now-button .ghosts {
            max-width: 5rem;
            top: -1rem;
            right: -4rem;
        }

        .banner.halloween .banner-content .banner-shop-now-button-container .shop-now-button {
            background-color: #eb7d0c;
        }

        @media only screen and (min-width: 768px){
            .banner.halloween .banner-content .spider-web {
                max-width: 30%;
                width: 100%;
                top: 0;
                left: 0;
                position: absolute;
                height: auto;
            }
            
            .banner.halloween .banner-content .banner-shop-now-button-container .shop-now-button .ghosts {
                max-width: 4rem;
            } 
        }

        @media only screen and (min-width: 1000px){
            .banner.halloween .banner-content .banner-shop-now-button-container .shop-now-button .ghosts {
                max-width: 5rem;
            }
        }

        @media only screen and (min-width: 1500px){
            .banner.halloween .banner-content .banner-shop-now-button-container .shop-now-button .ghosts {
                max-width: 6rem;
                right: -5rem;
            }
        }

        @media only screen and (min-width: 1920px){
            .banner.halloween .banner-content .banner-shop-now-button-container .shop-now-button .ghosts {
                max-width: 8rem;
                top: -2rem;
                right: -6rem;
            }
        }
        /* END HALLOWEE BANNER STYLES */

        /* BEGIN HIT THE BOOKS THIS SUMMER BANNER STYLES */
        .banner.hit-the-books-this-summer-banner {
            background-color: #fec92f;
        }

        .banner.hit-the-books-this-summer-banner .banner-content .banner-tagline-container .banner-message .sunglasses {
            max-width: 5.5rem;
            top: -1.9rem;
            right: -1.75rem;
            transform: rotate(40deg);
        }

        .banner.hit-the-books-this-summer-banner .banner-content .banner-shop-now-button-container .shop-now-button .book {
            max-width: 3rem;
            top: -.5rem;
            left: -4rem;
            transform: rotate(30deg);
        }

        @media only screen and (min-width: 768px){
            .banner .banner-content {
                padding: calc(3rem + 2vw) 0 0;
            }

            .banner .banner-content .banner-tagline-container {
                margin-bottom: 2rem;
            }

            .banner.hit-the-books-this-summer-banner .banner-content .banner-tagline-container .banner-message .sunglasses {
                width: 6vw;
                max-width: none;
                top: -1.5vw;
                right: -2vw;
            }
            
            .banner.hit-the-books-this-summer-banner .banner-content .banner-shop-now-button-container .shop-now-button .book {
                width: 4vw;
                max-width: none;
                top: -.75rem;
                left: -5vw;
            }
        }

        @media only screen and (min-width: 1000px){
          .banner .banner-content .banner-tagline-container {
                margin-bottom: 3rem;
          }
        }

        @media only screen and (min-width: 1920px){
            .banner.hit-the-books-this-summer-banner .banner-content .banner-tagline-container .banner-message .sunglasses {
                width: 115.118px;
                top: -28.8px;
                right: -38.4px;
            }
            
            .banner.hit-the-books-this-summer-banner .banner-content .banner-shop-now-button-container .shop-now-button .book {
                width: 76.7969px;
                top: -12px;
                left: -96px;
            }
        }
        /* END HIT THE BOOKS THIS SUMMER BANNER STYLES */

        /*  BEGIN SUMMER STEM ACTIVITIES BANNER STYLES */
        .banner.summer-stem-activities {
            background-color: #04aeef;
        }

        .banner.summer-stem-activities .banner-content .banner-tagline-container .banner-message .sun {
            max-width: 4rem;
            top: -4rem;
            left: -1.5rem;
            transform: rotate(40deg);
        }

        .banner.summer-stem-activities .banner-content .banner-shop-now-button-container .shop-now-button .sandals {
            max-width: 3rem;
            top: -.5rem;
            right: -4rem;
            transform: rotate(30deg);
        }

        @media only screen and (min-width: 768px){
            .banner.summer-stem-activities .banner-content .banner-tagline-container .banner-message .sun {
                width: 6vw;
                max-width: none;
                top: -6vw;
                left: -3.5vw;
            }
            
            .banner.summer-stem-activities .banner-content .banner-shop-now-button-container .shop-now-button .sandals {
                width: 4vw;
                max-width: none;
                top: -.75rem;
                right: -5vw;
            }
        }

        @media only screen and (min-width: 1920px){
            .banner.summer-stem-activities .banner-content .banner-tagline-container .banner-message .sun {
                width: 115.188px;
                top: -115.2px;
                left: -67.2px;
            }
            
            .banner.summer-stem-activities .banner-content .banner-shop-now-button-container .shop-now-button .sandals {
                width: 76.7969px;
                top: -12px;
                right: -96px;
            }
        }
        /*  END SUMMER STEM ACTIVITIES BANNER STYLES */

        .miraculous-education-carousel {
            max-width: 1920px;
            margin: 0 auto;
        }

        .slick-prev {
            left: 10px;
        }

        .slick-next {
            right: 10px;
        }

        .slick-prev,
        .slick-next {
            z-index: 100;
            height: 40px;
            width: 40px;
        }

        .slick-prev::before,
        .slick-next::before {
            font-size: 40px;
            text-shadow: 2px 3px 5px rgba(0,0,0,.35);
        }

        .miraculous-education-carousel.slick-slider .slick-next:before,
        .miraculous-education-carousel.slick-slider .slick-prev:before {
            font-family: 'slick' !important;
            color: #fff !important;
        }

        .miraculous-education-carousel.slick-slider .slick-next,
        .miraculous-education-carousel.slick-slider .slick-prev {
            top: 45vw;
        }

        @media only screen and (min-width: 768px){
            .miraculous-education-carousel.slick-slider .slick-next,
            .miraculous-education-carousel.slick-slider .slick-prev {
                top: 50%;
            }
        }
      </style>
    {%- endif -%}
    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>
  </head>

  <body class="gradient">
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{ "accessibility.skip_to_text" | t }}
    </a>

    {% section 'announcement-bar' %}
    {% section 'header' %}
    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {%- if request.page_type  == 'index' -%}
        <div id="miraculous-education-carousel-container">
          <div class="miraculous-education-carousel">
              <div class="banner-container">
                  <div class="halloween banner" style="background-color: #522d9d;">
                      <img src="https://cdn.shopify.com/s/files/1/0496/6373/8008/files/halloween_banner_desktop.jpg?v=1635621775" alt="" class="banner-image desktop">
                      <img src="https://cdn.shopify.com/s/files/1/0496/6373/8008/files/halloween_banner_mobile.jpg?v=1635621775" alt="" class="banner-image mobile">
                      <div class="banner-content">
                          <img class="decorative-icon spider-web" src="https://cdn.shopify.com/s/files/1/0496/6373/8008/files/spider_web.png?v=1635621775" alt="">
                          <div class="banner-tagline-container">
                              <h1 class="banner-message">
                                  Check out our<br>spooky books!
                              </h1>
                          </div>
                          <div class="banner-shop-now-button-container">
                              <a class="shop-now-button" href="/collections/halloween">
                                  Shop Now
                                  <img class="decorative-icon ghosts" src="https://cdn.shopify.com/s/files/1/0496/6373/8008/files/ghosts.png?v=1635621775" alt="">
                              </a>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js" integrity="sha512-XtmMtDEcNz2j7ekrtHvOVR4iwwaD6o/FUJe6+Zq+HgcCsk3kj4uSQQR8weQ2QVj1o0Pk6PwYLohm206ZzNfubg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script>
            $(document).ready(function(){
                if(window.location.search == "?show_test_carousel=true"){
                    document.querySelector('#miraculous-education-carousel-container').style.display = 'block';
                }
                $('.miraculous-education-carousel').slick({
                    infinite: true,
                    speed: 500,
                    autoplay: true,
                    autoplaySpeed: 5000,
                    slidesToShow: 1,
                    slidesToScroll: 1,
                    arrows: true
                });
            });
        </script>
      {%- endif -%}
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
    </ul>

    <script>
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        predictive_search_url: '{{ routes.predictive_search_url }}'
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t }}`
      }

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
      }

      window.accessibilityStrings = {
        shareSuccess: `{{ 'general.share.success_message' | t }}`,
      }
    </script>

    {%- if settings.predictive_search_enabled -%}
      <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}
  </body>
</html>
