{%- capture bc_layout -%}
{%- case layout -%}
{%- when 'productGridItemHtml' -%}
<div class="grid__item">
  {%- raw -%}
  <div class="card-wrapper">
    <div class="card-information">
      <div class="card-information__wrapper">
        {{itemVendor}}
        <h3 class="card-information__text h5">
          <a href="{{itemUrl}}" class="full-unstyled-link">
            {{itemTitle}}
          </a>
        </h3>
        {{itemReviews}}
        {{itemPrice}}
      </div>
    </div>
    <div class="card card--product {{cardProductClass}}" tabindex="-1">
      <div class="card__inner">
        {{itemImages}}
        <div class="card__badge">
          {{itemSoldOut}}
          {{itemSale}}
        </div>
      </div>
    </div>
    <div class="card-quick-buy">
      <form method="post" action="/cart/add" accept-charset="UTF-8" class="card-quick-buy-form" enctype="multipart/form-data" data-href="{{itemUrl}}">
        <input type="hidden" name="form_type" value="product">
        <input type="hidden" name="quantity" value="1" min="1">
        <input type="hidden" name="id" value="{{variantId}}">
        <div class="card-quick-buy-button-container">
          <button aria-label="Add To Cart" name="add" class="card-quick-buy-button" type="submit">
            <span>
              <svg class="icon icon-cart" aria-hidden="true" focusable="false" role="presentation" xmlns="http://www.w3.org/2000/svg" width="25.071" height="21.214" viewBox="0 0 25.071 21.214">
                <path fill="currentColor" fill-rule="evenodd" d="M-15.429,0a1.942,1.942,0,0,0-1.929-1.929A1.942,1.942,0,0,0-19.286,0a1.942,1.942,0,0,0,1.929,1.929A1.942,1.942,0,0,0-15.429,0Zm13.5,0A1.942,1.942,0,0,0-3.857-1.929,1.942,1.942,0,0,0-5.786,0,1.942,1.942,0,0,0-3.857,1.929,1.942,1.942,0,0,0-1.929,0ZM0-16.393a.971.971,0,0,0-.964-.964h-18.1c-.151-.723-.181-1.929-1.19-1.929h-3.857a.971.971,0,0,0-.964.964.971.971,0,0,0,.964.964h3.074l2.667,12.4a7.761,7.761,0,0,0-.919,2.064.971.971,0,0,0,.964.964H-2.893a.971.971,0,0,0,.964-.964.971.971,0,0,0-.964-.964H-16.754a2.282,2.282,0,0,0,.362-.964,5.008,5.008,0,0,0-.2-1.055L-.859-7.714A.988.988,0,0,0,0-8.679Z" transform="translate(25.071 19.286)"/>
              </svg>
              <span style='display:none;'>Add To Cart</span>
            </span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
{%- endraw -%}

{%- when 'soldOutLabelHtml' -%}
<span class="badge badge--bottom-left color-[[soldOutBadgeClass]]" aria-hidden="true">
  {{ 'products.product.sold_out' | t }}
</span>

{%- when 'saleLabelHtml' -%}
<span class="badge badge--bottom-left color-[[saleBadgeClass]]" aria-hidden="true">
  {{ 'products.product.on_sale' | t }}
</span>

{%- when 'vendorHtml' -%}
<span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
<div class="caption-with-letter-spacing light">[[itemVendorLabel]]</div>

{%- when 'previousActiveHtml' -%}
<li>
  <a href="[[itemUrl]]" class="pagination__item pagination__item--next pagination__item-arrow link motion-reduce">
    <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
      <path fill-rule="evenodd" clip-rule="evenodd"
        d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
        fill="currentColor">
      </path>
    </svg>
  </a>
</li>

{%- when 'nextActiveHtml' -%}
<li>
  <a href="[[itemUrl]]" class="pagination__item pagination__item--prev pagination__item-arrow link motion-reduce">
    <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
      <path fill-rule="evenodd" clip-rule="evenodd"
        d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
        fill="currentColor">
      </path>
    </svg>
  </a>
</li>

{%- when 'pageItemHtml' -%}
<li><a href="[[itemUrl]]" class="pagination__item link">[[itemTitle]]</a></li>

{%- when 'pageItemSelectedHtml' -%}
<li><span class="pagination__item pagination__item--current" aria-current="page">[[itemTitle]]</span></li>

{% when 'pageItemRemainHtml' %}
<li><span class="pagination__item">[[itemTitle]]</span></li>

{%- when 'paginateHtml' -%}
<div class="pagination-wrapper">
  <nav class="pagination" role="navigation" aria-label="Pagination">
    <ul class="pagination__list list-unstyled" role="list">[[previous]][[pageItems]][[next]]</ul>
  </nav>
</div>

{%- when 'sortingHtml' -%}
<select name="sort_by" class="facet-filters__sort select__select caption-large" id="SortBy"
  aria-describedby="a11y-refresh-page-message">[[sortingItems]]</select>
<svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
  <path fill-rule="evenodd" clip-rule="evenodd"
    d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
    fill="currentColor">
  </path>
</svg>

{%- endcase -%}
{%- endcapture -%}

{%- assign str = '}}' -%}
{{- bc_layout | json | replace: '[[', '{{' | replace: ']]', str -}}